{
  "files": [
    "./hardhat.config.ts"
  ],
  "include": [
    "frontend/src/**/*",
    "scripts/**/*",
    "test/**/*",
    "packages/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "Example",
    "build",
    "dist"
  ],
  "exactOptionalPropertyTypes": true,
  "compilerOptions": {
    "jsx": "react",
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "module": "commonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": ".",
    "rootDirs": [
      "frontend/src",
       "generated"
    ],
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2018",
  }
}